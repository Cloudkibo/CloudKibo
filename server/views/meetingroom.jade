extends tabcontents

block appbodycontent

  .fullBodyPane.row(class='animate-show')
            .mainBodyPane.col-sm-12
              div(class='animate-show', ng-hide='localCameraCaptured()')
                center
                  div(ng-show='isConnected()', class='animate-show')
                    br
                    br
                    h3 Share the following room name with Participants
                    br
                    h4 {{roomname}}
                    br
                    br
              div(class='animate-show', ng-show='localCameraCaptured() && !hasPeerSharedScreen()')
                center
                  span
                    video(id='localvideo', autoplay='true', width='{{meetingRemoteVideoWidth}}', class='videoelement', muted='true')
                    video(id='remotevideo1', autoplay='true', width='{{meetingRemoteVideoWidth}}', class='videoelement', controls='true')
                    video(id='remotevideo2', autoplay='true', width='{{meetingRemoteVideoWidth}}', class='videoelement', controls='true', ng-show='hasPeer2Joined()')
                    video(id='remotevideo3', autoplay='true', width='{{meetingRemoteVideoWidth}}', class='videoelement', controls='true', ng-show='hasPeer3Joined()')
                    video(id='remotevideo4', autoplay='true', width='{{meetingRemoteVideoWidth}}', class='videoelement', controls='true', ng-show='hasPeer4Joined()')
              div(ng-show='hasPeerSharedScreen()')
                center
                  span
                    video(id='remoteVideoScreen', autoplay='true', width='560', class='videoelement', controls='true')
              br
              alert(ng-repeat='alertCall in alertsCallStart', type='alert.type', close='closeAlertCallStart($index)') {{alertCall.msg}}
              br
            .sidePane.col-sm-4
              div(ng-hide='localCameraCaptured()', class='animate-show')
                div(id='chatBox', scroll-if)
                  .chatMessage(ng-repeat='userMessage in userMessages track by $index', scroll-item)
                    | {{userMessage}}
                form
                  input(type='text', id="dataChannelSend", ng-model='dataChannelSend', placeholder="Type Message here", autocomplete='off')
                  button(ng-click='sendData()') Send
  .bottomPane.row
    .col-sm-1(ng-show='localCameraCaptured()')
      .btn-wrapper-kibo
        a.icon-btn(id='showScreenButton', ng-click='showScreen()')
          i.fa.fa-desktop
          div {{showScreenText}}
    .col-sm-4(ng-hide='hasExtension()')
      .btn-wrapper-kibo
        a.btn.btn-lg.green(ng-click='installExtension()')
          i.fa.fa-plus-square-o
          div Add Screen Sharing Extension to share screen
    .col-sm-1(ng-show='localCameraCaptured()')
      .btn-wrapper-kibo
        label Send File
        input(id='file', type='file')
    .col-sm-1(id='0', ng-show='localCameraCaptured()')
    .col-sm-1(id='filelist_container', ng-show='localCameraCaptured()')
