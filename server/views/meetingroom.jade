div
  .header
    .container
      a(class='site-logo', href='/')
        img(src='/images/logo_small.png')
        | #{title}
      a(href='javascript:void(0);', class='mobi-toggler')
        i(class='fa fa-bars')
      //div(class='header-navigation pull-right font-transform-inherit')
              ul
                li
                  a.btn.btn-account.btn-send(ng-click='closeWindow()')
                    | Leave Conference
  .meetingFullBodyPane.row(class='animate-show')
            .meetingMainBodyPane
              div(class='animate-show', ng-hide='localCameraCaptured()')
                center
                  div(ng-show='isConnected()', class='animate-show')
                    br
                    br
                    h3 Share the following room name with Participants
                    br
                    h4 {{roomname}}
                    br
                    br
              div(class='animate-show', ng-show='localCameraCaptured() && !hasPeerSharedScreen()')
                center
                  span
                    video(id='localvideo', autoplay='true', height="170px" ,width='{{meetingRemoteVideoWidth}}', class='videoelement', muted='true')
                    video(id='remotevideo1', autoplay='true', width='{{meetingRemoteVideoWidth}}', class='videoelement', controls='true')
                    video(id='remotevideo2', autoplay='true', width='{{meetingRemoteVideoWidth}}', class='videoelement', controls='true', ng-show='hasPeer2Joined()')
                    video(id='remotevideo3', autoplay='true', width='{{meetingRemoteVideoWidth}}', class='videoelement', controls='true', ng-show='hasPeer3Joined()')
                    video(id='remotevideo4', autoplay='true', width='{{meetingRemoteVideoWidth}}', class='videoelement', controls='true', ng-show='hasPeer4Joined()')
                    audio(id='remoteaudio1', autoplay='true')
                    audio(id='remoteaudio2', autoplay='true')
                    audio(id='remoteaudio3', autoplay='true')
                    audio(id='remoteaudio4', autoplay='true')
              div(ng-show='hasPeerSharedScreen()')
                center
                  span
                    video(id='remoteVideoScreen', autoplay='true', width='80%', class='videoelementscreen', controls='true')
              br
              alert(ng-repeat='alertCall in alertsCallStart', type='alert.type', close='closeAlertCallStart($index)') {{alertCall.msg}}
              br
            .meetingSidePane(ng-show='showChatBox()')
              div(ng-show='localCameraCaptured()', class='animate-show')
                div(class='meetingChatBox', scroll-if)
                  .meetingChatMessage(ng-repeat='userMessage in userMessages track by $index', scroll-item)
                    | {{userMessage}}
                form
                  input(type='text', id="dataChannelSend", ng-model='dataChannelSend', placeholder="Type Message here", autocomplete='off')
                  button(ng-click='sendData()') Send
  .meetingBottomPane.row
    .col-sm-1(ng-show='localCameraCaptured()')
      .btn-wrapper-kibo
        a.icon-btn(id='showScreenButton', ng-click='showScreen()')
          i.fa.fa-desktop
          div {{showScreenText}}

    .col-sm-4(ng-hide='hasChromeExtension() || isFireFox()')
      .btn-wrapper-kibo
        a.btn.btn-lg.green(ng-click='installExtension()')
          i.fa.fa-plus-square-o
          div Add Chrome Screen Sharing Extension
    .col-sm-4(ng-show='isFireFox()')
      .btn-wrapper-kibo
        a.btn.btn-lg.green(target='self', ng-href='https://addons.mozilla.org/en-US/firefox/addon/cloudkibo-screen-capturing-in-/')
          i.fa.fa-plus-square-o
          div Add FireFox Screen Sharing Extension
    .col-sm-1(ng-show='localCameraCaptured()')
      .btn-wrapper-kibo
        label Send File
        input(id='file', type='file')

    .col-sm-1(id='0', ng-show='localCameraCaptured()')
    .col-sm-1(id='filelist_container', ng-show='localCameraCaptured()')
    .col-sm-1(ng-show='localCameraCaptured()')
      .btn-wrapper-kibo
        a.icon-btn(ng-click='audioToggle()')
          i.fa.fa-desktop
          div {{toggleAudioText}}
    .col-sm-1(ng-show='localCameraCaptured()')
      .btn-wrapper-kibo
        a.icon-btn(ng-click='videoToggle()')
          i.fa.fa-desktop
          div {{toggleVideoText}}
    .col-sm-1.chatBoxButton(ng-show='localCameraCaptured()')
      .btn-wrapper-kibo
        a.icon-btn(ng-click='toggleChatBoxVisibility()')
          i.fa.fa-envelope-o
          div Chat
