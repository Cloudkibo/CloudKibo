block bodycontent
 .main
    .row.margin-bottom-40
        // BEGIN CONTENT
        .container
          .content-page
            .row
              .col-md-9.col-sm-9
                h2 Contact Us
                p
                  | Send your feedback 
                // BEGIN FORM
                form(role='form', ng-submit='sendFeedback(contact)', novalidate, class='css-form form-horizontal form-without-legend', name='form')
                  .form-group
                    label Name
                    input.form-control(type='text', name="name", placeholder='Enter Name ', required, ng-model='contact.name')
                    div(ng-show="form.name.$dirty && !form.name.$focused")
                      div(ng-show="form.name.$invalid")
                        span(ng-show="form.name.$error.required")
                          | Enter the name.
                  .form-group
                    label Email
                    input.form-control(type='email', name="email", placeholder='Enter Email Address', required, ng-model='contact.email')
                    div(ng-show="form.email.$dirty && !form.email.$focused")
                      div(ng-show="form.email.$invalid")
                        span(ng-show="form.email.$error.required")
                          | Enter the email address.
                        span(ng-show="form.email.$error.email")
                          | This is not a valid email address.
                  .form-group
                    label Message
                    textarea.form-control(rows='5', name="message", placeholder='Type your suggestions here', required, ng-model='contact.message')
                    div(ng-show="form.message.$dirty && !form.message.$focused")
                      div(ng-show="form.message.$invalid")
                        span(ng-show="form.message.$error.required")
                          | Enter the suggestion.
                  button.btn.btn-primary(type='submit', ng-disabled="form.$invalid")
                    i.icon-ok
                    |  Send

              .col-md-9.col-sm-9
                br
                br
                alert(ng-repeat='alert in alerts', type='alert.type', close='closeAlert($index)') {{alert.msg}}
                // END FORM

        // END CONTENT


           
