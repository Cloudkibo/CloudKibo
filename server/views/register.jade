extends header

block append head
  //script(src='/javascripts/cloudKiboApp.js')

block bodycontent
 div(class='main')
   .container
     div(class='row margin-bottom-40')
       div(class='sidebar col-md-3 col-sm-3')
         ul(class='list-group margin-bottom-25 sidebar-menu')
           li(class='list-group-item clearfix')
             a(href='/login')
               i(class='fa fa-angle-right')
               | Log In
           li(class='list-group-item clearfix')
             a(href='/forgotpassword')
               i(class='fa fa-angle-right')
               | Forgot Password
       div(class='col-md-9 col-sm-9')
         h1 Create an account
         .content-form-page
           .row
             div(class='col-md-7 col-sm-7')
               form(role='form', novalidate, name='form', class='css-form form-horizontal', enctype='multipart/form-data', ng-submit='register(form)')
                 fieldset
                   legend Your Personal Details
                   .form-group
                     label(for='email', class='col-lg-4 control-label') First Name
                       span(class='require')
                         | *
                     .col-lg-8
                       input.form-control(type='text', name="firstname", placeholder='First Name', ng-model='user.firstname', required, ng-minlength='2', ng-maxlength='25', ng-focus)
                       div(ng-show!="form.firstname.$dirty && !form.firstname.$focused")
                         div(ng-show="form.firstname.$invalid")
                           span(ng-show="form.firstname.$error.required")
                             | Enter the first name.
                           span(ng-show="form.firstname.$error.minlength")
                             | First name is too short.
                           span(ng-show="form.firstname.$error.maxlength")
                             | First name is too big.
                   .form-group
                     label(for='email', class='col-lg-4 control-label') Last Name
                       span(class='require')
                         | *
                     .col-lg-8
                       input.form-control(type='text', name="lastname", placeholder='Last Name', ng-model='user.lastname', required, ng-minlength='2', ng-maxlength='25', ng-focus)
                       div(ng-show!="form.lastname.$dirty && !form.lastname.$focused")
                         div(ng-show="form.lastname.$invalid")
                           span(ng-show="form.lastname.$error.required")
                             | Enter the last name.
                           span(ng-show="form.lastname.$error.minlength")
                             | Last name is too short.
                           span(ng-show="form.lastname.$error.maxlength")
                             | Last name is too big.
                   .form-group
                     label(for='email', class='col-lg-4 control-label') Email Address
                       span(class='require')
                         | *
                     .col-lg-8
                       input.form-control(type='email', name="email", placeholder='Email Address', ng-model="user.email", required, ng-focus)
                       div(ng-show="form.email.$dirty && !form.email.$focused")
                         div(ng-show="form.email.$invalid")
                           span(ng-show="form.email.$error.required")
                             | Enter your email address.
                           span(ng-show="form.email.$error.email")
                             | This is not a valid email address.
                   .form-group
                     label(for='email', class='col-lg-4 control-label') Phone Number
                       span(class='require')
                         | *
                     .col-lg-8
                       input.form-control(type='text', name="phone", placeholder='Phone Number', ng-model="user.phone", required, ng-focus)
                       div(ng-show="form.phone.$dirty && !form.phone.$focused")
                         div(ng-show="form.phone.$invalid")
                           span(ng-show="form.phone.$error.required")
                             | Enter your contact number.
                           span(ng-show="form.email.$error.phone")
                             | This is not a valid phone number.
                 fieldset
                   legend Your Login Details
                   .form-group
                     label(for='email', class='col-lg-4 control-label') Username
                       span(class='require')
                         | *
                     .col-lg-8
                       input.form-control(type='text', name="username", placeholder='Enter Username (kiboname)', ng-model='user.username', required, ng-minlength='3', ng-maxlength='20', ng-focus)
                       div(ng-show!="form.username.$dirty && !form.username.$focused")
                         div(ng-show="form.username.$invalid")
                           span(ng-show="form.username.$error.required")
                             | Enter the username.
                           span(ng-show="form.username.$error.minlength")
                             | Username is too short.
                           span(ng-show="form.username.$error.maxlength")
                             | Username is too big.
                   .form-group
                     label(for='password', class='col-lg-4 control-label') Password
                       span(class='require')
                         | *
                     .col-lg-8
                       input.form-control(type='password', id='password' name="password", placeholder='Password', ng-model="user.password", ng-minlength='6', required, ng-focus)
                       div(ng-show!="form.password.$dirty && !form.password.$focused")
                         div(ng-show="form.password.$invalid")
                           span(ng-show="form.password.$error.required")
                             | Enter the password.
                           span(ng-show="form.password.$error.minlength")
                             | Length of password should be greater than 6 characters.
                  
                 .row
                   div(class='col-lg-8 col-md-offset-4 padding-left-0 padding-top-20')            
                     button.btn.btn-account.btn-send(type='submit', ng-disabled="form.$invalid || isUnchanged(user)") Submit
                   div(ng-show='underProgress()', style='text-align:center;')
                     img(src='/images/ProgressIcon.gif', width='60px', height='60px')
                 .row
                   div(class='col-lg-8 col-md-offset-4 padding-left-0 padding-top-20')            
                     alert(ng-repeat='alert in alertsRegister', type='alert.type', close='closeAlertRegister($index)') {{alert.msg}}
                 .row
                     div(class='col-lg-8 col-md-offset-4 padding-left-0 padding-top-10 padding-right-30')
                       hr
                       p(class='text-muted') or login using:
                       div
                           div
                             a(class='btn-auth btn-facebook', ng-click='loginOauth("facebook")')
                               | Login with 
                               b Facebook
                           br
                           div
                             a(class='btn-auth btn-google', ng-click='loginOauth("google")')
                               | Login with 
                               b Google+
                           br
                           div
                             a(class='btn-auth btn-windows', ng-click='loginOauth("windowslive")')
                               | Login with 
                               b Microsoft
 .footer
    .container
      .row
        div(class='col-md-6 col-sm-6 padding-top-10')
          | CloudKibo &copy; (Beta Version) All Rights Reserved
        div(class='col-md-6 col-sm-6')
          ul(class='social-footer list-unstyled list-inline pull-right')
                li
                  a(href='#')
                    i(class='fa fa-facebook')
                li
                  a(href='#')
                    i(class='fa fa-google-plus')
                li
                  a(href='#')
                    i(class='fa fa-linkedin')
                li
                  a(href='#')
                    i(class='fa fa-twitter')
                li
                  a(href='#')
                    i(class='fa fa-youtube')
 
