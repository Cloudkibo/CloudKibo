if (user)
      .container
       if(viewedTeacherProfile)
        br
        h3 #{viewedTeacherProfile.teachername.firstname} #{viewedTeacherProfile.teachername.lastname}
        br
        if(viewedTeacherProfile.user.picture)
          img(src='/userimage'+viewedTeacherProfile.user.picture, width='200px', height='230px', class='img-frame')
        else if(viewedTeacherProfile.user.fb_photo)
          img(src=''+viewedTeacherProfile.user.fb_photo, width='200px', height='230px', class='img-frame')
        else if(viewedTeacherProfile.user.google_photo)
          img(src=''+viewedTeacherProfile.user.google_photo, width='200px', height='230px', class='img-frame')
        else if(viewedTeacherProfile.user.windows_photo)
          img(src=''+viewedTeacherProfile.user.windows_photo, width='200px', height='230px', class='img-frame')
        else
          img(src='/images/displaypic.jpg', width='200px', height='230px')
        if(viewedTeacherProfile)
         br
         br
         h4 Username : #{viewedTeacherProfile.user.username}
         table(width='100%', border='0', bordercolor='#000000', cellspacing='0')
          tr
            td(width='25%')
              b First Name
            td
              | #{viewedTeacherProfile.teachername.firstname}
          tr
            td(width='25%')
              b Last Name
            td
              | #{viewedTeacherProfile.teachername.lastname}
          tr
            td(colspan='2')
              b
               u
                | Undergrad Education
          tr
            td(width='25%')
              b Subject Area
            td
              | #{viewedTeacherProfile.undergradarea}
          tr
            td(width='25%')
              b Academic Institution
            td
              | #{viewedTeacherProfile.undergradschool}
          tr
            td(width='25%')
              b Year
            td
              | #{viewedTeacherProfile.undergradyear}
