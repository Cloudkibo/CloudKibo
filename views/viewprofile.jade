            td
              | #{viewedTeacherProfile.phdschool}
          tr
            td(width='25%')
              b Year
            td
              | #{viewedTeacherProfile.phdyear}
        br
        .mainBodyboxHeading
          b #{viewedTeacherProfile.teachername.firstname}'s Courses
        if(viewedTeacherProfile)
          if(teacherCourses.length>0)
            .mainBodybox
              for teacherCourse in teacherCourses
                .divCourseScheduleMain-Wrapper
                  .divCourseScheduleMain
                    table(width='100%')
                      tr
                        td(width='55%')
                          h2 #{teacherCourse.coursename}
                        td(width='25%')
                          h4 #{teacherCourse.days}
                        td(width='15%')
                          h4 #{teacherCourse.time}
                        td(width='5%')
                          a(href = '#displaycourse/' + teacherCourse._id)
                            | Display
          else
            .mainBodybox
              p This teacher is not teaching any course.
              p
        br
        .mainBodyboxHeading
          b #{viewedTeacherProfile.teachername.firstname}'s Files
        if(viewedTeacherProfile)
          if(files.length>0)
            .mainBodybox
              for file in files
               if(file.fileid.isprivate == 'No')
                .divCourseScheduleMain-Wrapper
                  .divCourseScheduleMain
                    table(width='100%')
                      tr
                        td(width='70%')
                          h2 #{file.fileid.filename}
                        td(width='25%')
                          h4 #{file.fileid.size}
                        td(width='5%')
                          a(href='/download'+ file.fileid.filephysicalpath, target="_blank")
                            | Download
          else
            .mainBodybox
              p This teacher has not uploaded any file.
              p
